{
  "name": "hybro-example",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "npm run clean:assets && webpack --mode production && npm run copy:assets",
    "clean:assets": "rm -rf ./dist && rm -rf ../android/app/src/main/assets/www && rm -rf ../ios/www",
    "copy:assets": "mkdir -p ../android/app/src/main/assets && cp -r ./dist ../android/app/src/main/assets/www && cp -r ./dist ../ios/www"
  },
  "dependencies": {
    "core-js": "^3.2.1",
    "event-target-shim": "^5.0.1",
    "hybro": "../../",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "eslint": "^6.1.0",
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
